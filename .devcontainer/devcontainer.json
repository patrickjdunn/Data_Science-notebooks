{
  "name": "HI 5304 Codespace (Python + PostgreSQL)",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspaces/hi5304-notebooks",

  "forwardPorts": [5432],

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "mtxr.sqltools",
        "mtxr.sqltools-driver-pg"
      ]
    }
  },

  "postCreateCommand": "python -m pip install --upgrade pip && pip install -r requirements.txt"
}

